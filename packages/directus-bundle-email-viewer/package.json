{
	"name": "@onderwijsin/directus-bundle-email-viewer",
	"type": "module",
	"version": "1.3.0",
	"description": "Fetch and view your organization's email to a given emailaddress",
	"icon": "extension",
	"author": {
		"name": "Onderwijs in",
		"email": "hallo@onderwijs.in",
		"url": "https://github.com/onderwijsin"
	},
	"contributors": [
		{
			"name": "Remi Huigen",
			"email": "remi@onderwijs.in",
			"url": "https://github.com/remihuigen"
		}
	],
	"license": "MIT",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-bundle"
	],
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"directus:extension": {
		"type": "bundle",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"entries": [
			{
				"type": "endpoint",
				"name": "server",
				"source": "src/server/index.ts"
			},
			{
				"type": "interface",
				"name": "email-interface",
				"source": "src/email-interface/index.ts"
			}
		],
		"host": "^10.10.0 || ^11.0.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"validate": "directus-extension validate",
		"add": "directus-extension add"
	},
	"dependencies": {
		"@azure/identity": "^4.8.0",
		"@directus/errors": "^2.0.0",
		"@directus/types": "^13.0.0",
		"@microsoft/microsoft-graph-client": "^3.0.7",
		"@microsoft/microsoft-graph-types": "^2.40.0",
		"date-fns": "^4.1.0",
		"dompurify": "^3.2.4",
		"utils": "workspace:^",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@directus/api": "^24.0.1",
		"@directus/extensions": "^3.0.4",
		"@directus/extensions-sdk": "13.0.4",
		"@types/node": "^22.14.1",
		"@vueuse/core": "^13.0.0",
		"typescript": "^5.8.2",
		"vue": "^3.5.13"
	}
}
