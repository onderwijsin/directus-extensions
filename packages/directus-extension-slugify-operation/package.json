{
	"name": "@onderwijsin/directus-extension-slugify-operation",
	"description": "A Directus extension that adds a slugify operation for flows",
	"icon": "extension",
	"version": "1.0.1",
	"author": {
		"name": "Onderwijs in",
		"email": "hallo@onderwijs.in",
		"url": "https://github.com/onderwijsin"
	},
	"contributors": [
		{
			"name": "Remi Huigen",
			"email": "remi@onderwijs.in",
			"url": "https://github.com/remihuigen"
		}
	],
	"license": "MIT",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-operation"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"directus:extension": {
		"type": "operation",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"source": {
			"app": "src/app.ts",
			"api": "src/api.ts"
		},
		"host": "^10.10.0 || ^11.0.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link"
	},
	"devDependencies": {
		"@directus/api": "^25.0.1",
		"@directus/errors": "^2.0.0",
		"@directus/extensions-sdk": "13.0.1",
		"@directus/types": "^13.0.0",
		"@types/node": "^22.13.4",
		"typescript": "^5.7.3",
		"vue": "^3.5.13"
	},
	"dependencies": {
		"slugify": "^1.6.6"
	}
}
