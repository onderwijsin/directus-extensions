{
	"name": "directus-bundle-sluggernaut",
	"description": "An all in one solution for managing routes",
	"icon": "extension",
	"version": "1.0.0",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-bundle"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "bundle",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"entries": [
			{
				"type": "interface",
				"name": "slug-interface",
				"source": "src/slug-interface/index.ts"
			},
			{
				"type": "display",
				"name": "slug-display",
				"source": "src/slug-display/index.ts"
			},
			{
				"type": "hook",
				"name": "slug-hooks",
				"source": "src/slug-hooks/index.ts"
			},
			{
				"type": "hook",
				"name": "redirect-hooks",
				"source": "src/redirect-hooks/index.ts"
			}
		],
		"host": "^10.10.0 || ^11.0.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"add": "directus-extension add"
	},
	"devDependencies": {
		"@directus/api": "^24.0.1",
		"@directus/extensions-sdk": "13.0.1",
		"@directus/types": "^13.0.0",
		"typescript": "^5.7.3",
		"vue": "^3.5.13",
		"@types/node": "^22.13.4"
	}
}
