{
	"name": "@onderwijsin/directus-bundle-sluggernaut",
	"type": "module",
	"version": "1.3.0",
	"description": "An all in one solution for managing routes",
	"icon": "extension",
	"author": {
		"name": "Onderwijs in",
		"email": "hallo@onderwijs.in",
		"url": "https://github.com/onderwijsin"
	},
	"contributors": [
		{
			"name": "Remi Huigen",
			"email": "remi@onderwijs.in",
			"url": "https://github.com/remihuigen"
		}
	],
	"license": "MIT",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-bundle"
	],
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"directus:extension": {
		"type": "bundle",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"entries": [
			{
				"type": "interface",
				"name": "slug-interface",
				"source": "src/slug-interface/index.ts"
			},
			{
				"type": "display",
				"name": "link-display",
				"source": "src/link-display/index.ts"
			},
			{
				"type": "hook",
				"name": "slug-hooks",
				"source": "src/slug-hooks/index.ts"
			},
			{
				"type": "hook",
				"name": "redirect-hooks",
				"source": "src/redirect-hooks/index.ts"
			},
			{
				"type": "interface",
				"name": "path-interface",
				"source": "src/path-interface/index.ts"
			}
		],
		"host": "^10.10.0 || ^11.0.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"add": "directus-extension add",
		"validate": "directus-extension validate"
	},
	"devDependencies": {
		"@directus/api": "^30.0.0",
		"@directus/errors": "^2.0.3",
		"@directus/extensions": "^3.0.10",
		"@directus/extensions-sdk": "^16.0.1",
		"@directus/types": "^13.2.2",
		"@types/node": "^24.3.0",
		"@vueuse/core": "^13.9.0",
		"slugify": "^1.6.6",
		"typescript": "5.9.2",
		"utils": "workspace:^",
		"vue": "3.5.18"
	}
}
