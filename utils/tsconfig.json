{
	"extends": "@directus/tsconfig/node22",
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"rootDir": "./src",
		"module": "es2022",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"verbatimModuleSyntax": false
	},
	"include": ["src"],
	"typedocOptions": {
		"entryPoints": [
			"./src/index.ts"
		]
	}
}
